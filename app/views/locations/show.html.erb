<div class="row">
	<div class="col-md-12">
		<h1 class="text-center">Votre destination est : <%= @location.address.capitalize %></h1>
		<h4 class="text-center"><strong>( Latitude: </strong><%= @location.latitude %>, <strong>Longitude: </strong><%= @location.longitude %> )</h4>
	</div>

</div>

<hr />

<div class="row">
	<div class="col-md-7">
		<div class="panel panel-primary">
  		<div class="panel-heading">
  			<h4><i class="fa fa-sun-o"></i>Météo et conseils</h4>
  		</div>
  		<div class="panel-body">
        <div class="row well">
          <div class="col-md-5">
            <h5>Résumé :</h5>
            <b><%= Time.now.strftime('%A') %></b><br>
            <%= @location.etat_ciel %><br>
            Temp : <%= @location.temperature %> °C<br>
            Humidité : <%= @location.humidite %> %<br>
            Vent : <%= @location.wind %> Km/H
          </div>
          <div class="col-md-2">
            <h5>Icone :</h5>
            <%= quelle_icone(@location) %>
          </div>
          <div class="col-md-5">
            <h5>Conseils :</h5>
            <p><i class="fa fa-check"></i><%= quelle_tenue(@location.temperature) %><br></p>
            <p><i class="fa fa-check"></i><%= quel_accessoire(@location.temperature) %><br></p>
            <p><i class="fa fa-check"></i><%= quel_accessoire(@location.temperature) %></p>
          </div>
        </div>
        <%= link_to 'Retour Destinations Récentes', locations_path, class: 'btn btn-mini btn-primary block-center', style: 'width: 100%;' %>
      </div>
		</div>  
	</div>
	<div class="col-md-5">
		<div class="panel panel-primary">
  		<div class="panel-heading" style="">
  			<h4><i class="fa fa-map-marker"></i>Carte</h4>
  		</div>
  		<div class="panel-body" style="padding: 0;">
  			<div style='width: 100%;'>
  				<div id="map" style='width: 100%; height: 250px;'></div>
				</div>
  		</div>
		</div>
	</div>
</div>




<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers([
      {
        "lat": <%= @location.latitude %>,
        "lng": <%= @location.longitude %>,
        "picture": {
          "url": "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
          "width":  36,
          "height": 36
        },
        "infowindow": "hello!"
      }
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>