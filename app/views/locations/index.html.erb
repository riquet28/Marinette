<h1 class="text-center titre-page">Bienvenue sur l'application de Marinette</h1>

<h1>Destination(s) Récente(s)</h1>

<hr />

<table class="table table-hover">
  <thead>
    <tr>
      <th>Destination</th>
      <th>Température</th>
      <th>Humidité</th>
      <th>Vent</th>
      <th>Ciel</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.address %></td>
        <td><%= location.temperature %> °C</td>
        <td><%= location.humidite %></td>
        <td><%= location.wind %> Km/H</td>
        <td><%= location.etat_ciel %></td>
        <td><%= link_to "<i class='fa fa-eye'></i> Voir".html_safe, location, class: 'btn btn-mini btn-primary pull-right' %></td>
        <td><%= link_to "<i class='fa fa-trash-o'></i> Supprimer".html_safe, location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger pull-right' %></td>
        <td><%= link_to "<i class='fa fa-refresh'></i> Rafraichir".html_safe, refresh_location_path(location), class: "btn btn-mini btn-success pull-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Saisir une nouvelle destination :</h1>

<hr />

<%= render 'form' %>




